script/source = "extends Node2D

func _ready():
	var start_button = $StartUI/StartButton
	var restart_button = $GameOverUI/Panel/MarginContainer/VBoxContainer/Button
	start_button.pause_mode = Node.PAUSE_MODE_PROCESS
	$GameOverUI.pause_mode = Node.PAUSE_MODE_PROCESS
	get_tree().paused = true
	start_button.connect(\"button_down\", self, \"on_start_button_pressed\")
	$Butt.connect(\"butt_collision\", self, \"on_butt_collision\")
	$Butt.connect(\"butt_died\", self, \"on_butt_died\")
	restart_button.connect(\"button_down\", self, \"on_restart_button_pressed\")

func on_butt_collision():
	for pipe in $Pipes.get_children():
		pipe.state = \"stopped\"
	for layer in $BG.get_children():
		layer.stop = true

func on_butt_died():
	get_tree().paused = true
	$GameOverUI.visible = true
	$GameOverUI/Panel/MarginContainer/VBoxContainer/ScoreLabel.text = \"Score: %s\" % $Butt.score

func on_start_button_pressed():
	get_tree().paused = false
	$StartUI.queue_free()
	$Title.queue_free()

func on_restart_button_pressed():
	print(\"reset\")
	get_tree().reload_current_scene()"

